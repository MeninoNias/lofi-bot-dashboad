    "elysia": "^1.4.22",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.8.1",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.4",
    "prism-media": "^1.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@eslint/js": "^9.18.0",
    "drizzle-kit": "^0.31.8",
    "typescript-eslint": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2"
  }
